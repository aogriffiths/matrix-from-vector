{
  "name": "matrix-scan",
  "version": "1.0.0",
  "description": "Scan 2D matricies in to 1D arrays",
  "main": "dist/index.js",
  "types": "dist/index.d.js",
  "scripts": {
    "build": "npm run build:tsc  && npm run build:gen-docs && npm run build:api-extract && npm run build:api-docs",
    "build:tsc": "tsc",
    "build:tsc-watch": "tsc -w",
    "build:api-extract": "rm -rf temp && mkdir -p etc && api-extractor run --local --verbose",
    "build:api-docs": "api-documenter markdown --input-folder temp --output-folder docs/generated/api",
    "build:gen-docs": "cd docs-generators && npm start",
    "prepare": "npm run build",
    "test": "npm run test:code && npm run test:examples",
    "test:examples": "cd examples && npm run test",
    "test:code": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register 'tests/**/*.ts'"
  },
  "author": "Adam Griffiths",
  "license": "ISC",
  "devDependencies": {
    "@microsoft/api-documenter": "^7.12.9",
    "@microsoft/api-extractor": "^7.13.2",
    "@types/chai": "^4.2.15",
    "@types/d3": "^6.3.0",
    "@types/jsdom": "^16.2.6",
    "@types/mocha": "^8.2.1",
    "@types/npm": "^2.0.31",
    "chai": "^4.3.0",
    "handlebars": "^4.7.7",
    "mocha": "^8.3.0",
    "npm": "^7.6.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.2"
  },
  "dependencies": {
    "@types/node": "^14.14.32",
    "d3": "^6.5.0",
    "jsdom": "^16.4.0",
    "request": "^2.88.2"
  }
}
